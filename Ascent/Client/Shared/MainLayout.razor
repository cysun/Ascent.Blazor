@inherits LayoutComponentBase

<Layout Style="min-height: 100vh;">
    <Sider Breakpoint="@BreakpointType.Lg" CollapsedWidth="64">
        <div class="logo">Ascent</div>
        <Menu Theme="MenuTheme.Dark" Mode="MenuMode.Inline" DefaultSelectedKeys=@(new[]{"1"})>
            <MenuItem Key="1" RouterLink="">
                <Icon Type="home" Theme="outline" />
                <span class="nav-text">Home</span>
            </MenuItem>
            <MenuItem Key="2" RouterLink="counter">
                <Icon Type="number" Theme="outline" />
                <span class="nav-text">Counter</span>
            </MenuItem>
            <MenuItem Key="3" RouterLink="fetchdata">
                <Icon Type="cloud" Theme="outline" />
                <span class="nav-text">Fetch Data</span>
            </MenuItem>
        </Menu>
    </Sider>
    <Layout Class="site-layout">
        <Header Class="site-layout-background" Style="padding: 0;"></Header>
        <Content Style=" margin: 0 16px;">
            @Body
        </Content>
        <Footer Style="text-align: center;">Ant Design Â©2018 Created by Ant UED</Footer>
    </Layout>
</Layout>

